{
  "name": "decky-spotify",
  "version": "0.0.1",
  "description": "A Spotify plugin for the Steam Deck",
  "type": "module",
  "scripts": {
    "build": "rollup -c",
    "watch": "rollup -c -w",
    "test": "bun test",
    "start": "bun run watch",
    "release:build": "bash scripts/build-release.sh",
    "version:patch": "npm version patch --no-git-tag-version",
    "version:minor": "npm version minor --no-git-tag-version",
    "version:major": "npm version major --no-git-tag-version",
    "release": "pnpm run build && pnpm run release:build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/SteamDeckHomebrew/decky-spotify.git"
  },
  "keywords": [
    "decky",
    "plugin",
    "spotify",
    "steam-deck",
    "deck"
  ],
  "author": "You <you@you.tld>",
  "license": "BSD-3-Clause",
  "bugs": {
    "url": "https://github.com/SteamDeckHomebrew/decky-plugin-template/issues"
  },
  "homepage": "https://github.com/SteamDeckHomebrew/decky-plugin-template#readme",
  "devDependencies": {
    "@decky/rollup": "^1.0.1",
    "@decky/ui": "^4.7.2",
    "@types/react": "18.3.3",
    "@types/react-dom": "18.3.0",
    "@types/webpack": "^5.28.5",
    "rollup": "^4.22.5",
    "typescript": "^5.6.2"
  },
  "dependencies": {
    "@decky/api": "^1.1.2",
    "i18next": "25.6.2",
    "react-i18next": "16.3.1",
    "react-icons": "^5.3.0",
    "tslib": "^2.7.0",
    "zustand": "5.0.8"
  },
  "pnpm": {
    "peerDependencyRules": {
      "ignoreMissing": [
        "react",
        "react-dom"
      ]
    }
  }
}